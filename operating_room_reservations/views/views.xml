<odoo>
    <record id="view_operating_room_tree" model="ir.ui.view">
        <field name="name">operating.room.tree</field>
        <field name="model">operating.room</field>
        <field name="arch" type="xml">
            <tree string="Salas de operaciones">
                <field name="name"/>
                <field name="capacity"/>
            </tree>
        </field>
    </record>
   
       <record id="action_reservation_calendar" model="ir.actions.act_window">
        <field name="name">Reservas del Día</field>
        <field name="res_model">reservation</field>
        <field name="view_mode">calendar</field>
        <field name="view_id" ref="view_reservation_calendar"/>
    </record>

    <record id="view_reservation_tree" model="ir.ui.view">
        <field name="name">reservation.tree</field>
        <field name="model">reservation</field>
        <field name="arch" type="xml">
            <tree string="Reservas">
                <field name="operating_room_id"/>
                <field name="start_time"/>
                <field name="end_time"/>
                <field name="patient_name"/>
                <field name="procedure"/>
                <button name="%(action_reservation_calendar)d" type="action" icon="fa-calendar"/>
            </tree>
        </field>
    </record>


<record id="view_reservation_calendar" model="ir.ui.view">
    <field name="name">reservation.calendar</field>
    <field name="model">reservation</field>
    <field name="arch" type="xml">
        <calendar string="Reservas del Día" date_start="start_time" date_stop="end_time" mode="datetime" all_day="all_day" force="True">
            <field name="operating_room_id" type="many2one" relation="operating.room"/>
            <field name="patient_name"/>
            <field name="procedure"/>
        </calendar>
    </field>
</record>


    <record id="view_expense_tree" model="ir.ui.view">
        <field name="name">expense.tree</field>
        <field name="model">expense</field>
        <field name="arch" type="xml">
            <tree string="Gastos">
                <field name="reservation_id"/>
                <field name="type"/>
                <field name="amount"/>
            </tree>
        </field>
    </record>

    <record id="view_expense_form" model="ir.ui.view">
        <field name="name">expense.form</field>
        <field name="model">expense</field>
        <field name="arch" type="xml">
            <form string="Gasto">
                <sheet>
                    <group>
                        <field name="reservation_id"/>
                        <field name="type"/>
                        <field name="amount"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>